<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/defaultwallpaper2"
    android:padding="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomePageActivity" >

    <FrameLayout
         android:id="@+id/main_container"
         android:layout_width="800dp"
         android:layout_height="435dp"
         android:layout_alignRight="@+id/imageViewljswjs"
         android:layout_alignTop="@+id/imageViewljswjs" >
     </FrameLayout>
    
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/imageViewljswjs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/back"
        android:layout_marginTop="44dp"
        android:clickable="true"
        android:src="@null" />

<RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="200dp"
        android:layout_height="320dp"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageViewage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_marginTop="140dp"
            android:src="@drawable/age2" />

        <ImageView
            android:id="@+id/imageViewage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/imageViewage2"
            android:layout_marginTop="33dp"
            android:src="@drawable/age1_after" />

        <ImageView
            android:id="@+id/imageViewage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/imageViewage2"
            android:src="@drawable/age3" />

    </RelativeLayout>

     <RelativeLayout
         android:id="@+id/title_bar"
         android:layout_width="250dp"
         android:layout_height="50dp"
         android:layout_alignBottom="@+id/back"
         android:layout_alignParentTop="true"
         android:layout_toLeftOf="@+id/back"
         android:orientation="horizontal" >

         <ImageView
             android:id="@+id/image_battery"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_alignParentTop="true"
             android:layout_marginRight="20dp"
             android:layout_toLeftOf="@+id/digitalClock1"
             android:src="@drawable/battery" />

         <ImageView
             android:id="@+id/iv_wifi_status"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_alignParentTop="true"
             android:layout_marginRight="20dp"
             android:layout_toLeftOf="@+id/image_battery"
             android:src="@drawable/wifi_signal" />

         <DigitalClock
             android:id="@+id/digitalClock1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="20dp"
             android:cursorVisible="true"
             android:text="@string/DigitalClock"
             android:textColor="@android:color/white"
             android:textSize="25dp" />

     </RelativeLayout>

</RelativeLayout>