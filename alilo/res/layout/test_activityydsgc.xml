<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/defaultwallpaper6"
    android:padding="@dimen/activity_vertical_margin"
    android:paddingTop="20dp"
	>

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/back"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_battery"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/digitalClock1"
            android:src="@drawable/battery" />

        <ImageView
            android:id="@+id/iv_wifi_status"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/image_battery"
            android:src="@drawable/wifi_signal" />

        <DigitalClock
            android:id="@+id/digitalClock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:cursorVisible="true"
             android:text="@string/DigitalClock"
            android:layout_marginRight="20dp"
            android:textColor="@android:color/white"
            android:textSize="25dp" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:clickable="true"
        android:src="@drawable/back" />


    <com.android.customewidget.MyGridView
        android:id="@+id/app_list"
        android:layout_width="670dp"
        android:layout_height="390dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="130dp"
        android:background="@null"
        android:fadeScrollbars="false"
        android:numColumns="3"
        android:verticalSpacing="6dp"
        android:scrollbars="vertical" >
    </com.android.customewidget.MyGridView>

    <ImageView
        android:id="@+id/imageViewydsgcjs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/back"
        android:layout_below="@+id/back"
        android:layout_marginRight="24dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:src="@null" />

</RelativeLayout>