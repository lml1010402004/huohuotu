<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/defaultwallpaper5"
    tools:context=".HomePageActivity" >


    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:clickable="true"
        android:src="@drawable/back" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageViewage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="44dp"
            android:src="@drawable/czlxtage1_after" />

        <ImageView
            android:id="@+id/imageViewage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageViewage2"
            android:layout_below="@+id/imageViewage2"
            android:layout_marginTop="18dp"
            android:src="@drawable/czlxtage3" />

        <ImageView
            android:id="@+id/imageViewage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageViewage1"
            android:layout_centerVertical="true"
            android:src="@drawable/czlxtage2" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="800dp"
        android:layout_height="415dp"
        android:layout_below="@+id/back"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/relativeLayout1" >
    </FrameLayout>
    
         <RelativeLayout
         android:id="@+id/title_bar"
         android:layout_width="250dp"
         android:layout_height="50dp"
         android:layout_alignBottom="@+id/back"
         android:layout_alignParentTop="true"
         android:layout_toLeftOf="@+id/back"
         android:orientation="horizontal" >

         <ImageView
             android:id="@+id/image_battery"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_alignParentTop="true"
             android:layout_marginRight="20dp"
             android:layout_toLeftOf="@+id/digitalClock1"
             android:src="@drawable/battery" />

         <ImageView
             android:id="@+id/iv_wifi_status"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_alignParentTop="true"
             android:layout_marginRight="20dp"
             android:layout_toLeftOf="@+id/image_battery"
             android:src="@drawable/wifi_signal" />

         <DigitalClock
             android:id="@+id/digitalClock1"
             android:layout_width="wrap_content"
             android:layout_height="55dp"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:cursorVisible="true"
             android:layout_marginRight="20dp"
             android:text="@string/DigitalClock"
             android:textColor="@android:color/white"
             android:textSize="25dp" />

     </RelativeLayout>

         <ImageView
             android:id="@+id/imageViewczlxtjs"
             android:layout_width="112dp"
             android:layout_height="106dp"
             android:layout_alignLeft="@+id/relativeLayout1"
             android:layout_alignParentBottom="true"
             android:layout_marginLeft="34dp"
             android:layout_marginBottom="38dp"
             android:src="@null" />

</RelativeLayout>